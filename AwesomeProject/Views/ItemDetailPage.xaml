<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AwesomeProject.ItemDetailPage" Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Item.Text}" FontSize="Small" />
		<Label Text="{Binding Item.Description}" FontSize="Small" />
        <Label Text="{Binding Item.AttributeType}" FontSize="Small" />
        <Label Text="{Binding Item.Value}" FontSize="Small" />
        <Label Text="{Binding Item.BodyPartType}" FontSize="Small" />
        <Label Text="{Binding Item.Range}" FontSize="Small" />
        <Image Source="{Binding Item.Image}" HeightRequest="50" HorizontalOptions="Center" />
	</StackLayout>
</ContentPage>
